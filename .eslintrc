extends:
  - eslint-config-airbnb

parser:
  babel-eslint

settings:
  ecmascript: 6

parserOptions:
  sourceType: "module"
  ecmaVersion: 6
  ecmaFeatures:
    jsx: true

env:
  browser: true

rules:
  indent:
    - 2
    - 4
  react/jsx-indent-props:
    - 2
    - 4
  react/jsx-indent:
    - 2
    - 4
  max-len:
    - 2
    - 145
  key-spacing:
    - 2
    - align: value
  object-curly-spacing:
    - 2
    - never
  no-console: 0
  linebreak-style: 0
  react/jsx-filename-extension: 0
